.m-cell { 
  break-inside: avoid; 
  margin-bottom: 0;
  position: relative;
  width: 100%;
}

.m-col {
  position: relative;
  flex: 1 1 0;
  height: 150vh;
  overflow: hidden;
  cursor: grab;
