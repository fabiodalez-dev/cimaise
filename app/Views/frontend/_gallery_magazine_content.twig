/* Responsive Magazine Layout */
.pswp-gallery, .m-mobile-wrap, .m-tablet-wrap, .m-desktop-wrap, .m-col, .m-mobile {
  touch-action: pan-y pinch-zoom; /* Allow page scrolling through magazine */
}

/* Explicit heights for Lenis smooth scroll compatibility */
/* Use dvh (dynamic viewport height) for mobile compatibility with dynamic address bar */
.pswp-gallery {
  height: auto;
  min-height: 100dvh;
}
@media (min-width: 1200px) {
  .pswp-gallery { min-height: 140dvh; }
}
@media (min-width: 768px) and (max-width: 1199px) {
  .pswp-gallery { min-height: 130dvh; }
}

.m-mobile-wrap { display: block; }
.m-tablet-wrap { display: none; }
.m-desktop-wrap { display: none; }

/* Tablet: 768px - 1199px */
@media (min-width: 768px) and (max-width: 1199px) {
  .m-mobile-wrap { display: none !important; }
  .m-tablet-wrap { display: flex !important; }
