{# Magazine Split gallery content (partial) - Improved Responsive Version #}
{% macro pic(image, base_path, album, seo_title, defer_sources, smart_alt) %}
  {% set use_defer = defer_sources ? true : false %}
  {% set placeholder = 'data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///ywAAAAAAQABAAACAUwAOw==' %}
  <picture class="block w-full h-full">
    {% if image.sources is defined and image.sources.avif is defined and image.sources.avif|length %}
      <source type="image/avif" {% if use_defer %}data-srcset{% else %}srcset{% endif %}="{% for s in image.sources.avif %}{% set p = s|split(' ') %}{{ p[0] starts with('/') ? (base_path ~ p[0]) : p[0] }} {{ p[1]|default('1x') }}{% if not loop.last %}, {% endif %}{% endfor %}" sizes="(min-width:1200px) 50vw, (min-width:768px) 70vw, 100vw">
    {% endif %}
    {% if image.sources is defined and image.sources.webp is defined and image.sources.webp|length %}
      <source type="image/webp" {% if use_defer %}data-srcset{% else %}srcset{% endif %}="{% for s in image.sources.webp %}{% set p = s|split(' ') %}{{ p[0] starts with('/') ? (base_path ~ p[0]) : p[0] }} {{ p[1]|default('1x') }}{% if not loop.last %}, {% endif %}{% endfor %}" sizes="(min-width:1200px) 50vw, (min-width:768px) 70vw, 100vw">
    {% endif %}
    {% if image.sources is defined and image.sources.jpg is defined and image.sources.jpg|length %}
      <source type="image/jpeg" {% if use_defer %}data-srcset{% else %}srcset{% endif %}="{% for s in image.sources.jpg %}{% set p = s|split(' ') %}{{ p[0] starts with('/') ? (base_path ~ p[0]) : p[0] }} {{ p[1]|default('1x') }}{% if not loop.last %}, {% endif %}{% endfor %}" sizes="(min-width:1200px) 50vw, (min-width:768px) 70vw, 100vw">
    {% endif %}
    {% set img_src = image.fallback_src|default(image.url) %}
    <img {% if use_defer %}data-src="{{ img_src starts with('/') ? (base_path ~ img_src) : img_src }}"{% else %}src="{{ img_src starts with('/') ? (base_path ~ img_src) : img_src }}"{% endif %}
         src="{{ use_defer ? placeholder : (img_src starts with('/') ? (base_path ~ img_src) : img_src) }}"
         alt="{{ smart_alt|default(image.alt)|e('html_attr') }}"
         title="{{ seo_title|e('html_attr') }}"
         class="w-full h-full object-cover"
         loading="lazy"
         decoding="async"
         data-fallback="hide">
  </picture>
{% endmacro %}

