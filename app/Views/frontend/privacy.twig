{% extends 'frontend/_layout.twig' %}

{% block scripts %}
{# WebPage JSON-LD for SEO #}
<script type="application/ld+json" nonce="{{ csp_nonce() }}">
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": {{ privacy_title|default(trans('frontend.privacy.title'))|json_encode|raw }},
  "url": {{ (canonical_url|default(current_url))|json_encode|raw }},
  {% if meta_description %}
  "description": {{ meta_description|json_encode|raw }},
  {% endif %}
  "inLanguage": "{{ site_language|default('en') }}"
}
</script>
{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
  {% include 'frontend/_breadcrumbs.twig' %}
</div>
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-12 md:pt-16 pb-16">
    <h1 class="text-4xl md:text-5xl font-semibold tracking-tight">{{ privacy_title|default(trans('frontend.privacy.title'))|e }}</h1>

    <div class="mt-8 text-lg leading-8">
      {% if privacy_content %}
        <div class="rich-text-content">{{ privacy_content|safe_html }}</div>
      {% else %}
        <p class="text-neutral-600">{{ trans('frontend.privacy.no_content') }}</p>
      {% endif %}
    </div>
  </section>
{% endblock %}
