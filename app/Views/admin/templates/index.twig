{% extends 'admin/_layout.twig' %}
{% block title %}{{ trans('admin.templates.title') }} — Cimaise{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-8 flex-wrap gap-3">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">{{ trans('admin.templates.title') }}</h1>
      <p class="text-gray-600 mt-1">{{ trans('admin.templates.switcher_description') }}</p>
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
    {% for template in templates %}
    <div class="card p-4 flex flex-col gap-3 hover:shadow-md transition-all duration-200 {{ template.show_in_switcher|default(1) ? '' : 'opacity-50 grayscale' }}" data-template-id="{{ template.id }}">
      <div class="flex items-start gap-3">
        {% set icon = 'fa-th' %}
        {% if template.settings.layout == 'masonry' or template.settings.layout == 'masonry_fit' %}
          {% set icon = 'fa-columns' %}
        {% elseif template.settings.layout == 'magazine' %}
          {% set icon = 'fa-newspaper' %}
        {% elseif template.settings.layout == 'gallery_wall' %}
          {% set icon = 'fa-arrows-left-right' %}
        {% elseif template.slug == 'grid-ampia' %}
          {% set icon = 'fa-puzzle-piece' %}
        {% endif %}
        <i class="fas {{ icon }} text-gray-900 text-lg mt-0.5"></i>
        <div class="flex-1 min-w-0">
          <a href="{{ base_path }}/admin/templates/{{ template.id }}/edit" class="font-medium text-gray-900 hover:text-blue-600 truncate block">{{ template.name }}</a>
          <p class="text-xs text-gray-500 truncate">{{ template.description|default('—') }}</p>
        </div>
      </div>

      <div class="flex items-center justify-between pt-2 border-t border-gray-100">
        <label class="flex items-center gap-2 cursor-pointer group">
          <input type="checkbox"
                 class="switcher-toggle w-4 h-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500"
                 data-id="{{ template.id }}"
                 data-type="template"
                 {{ template.show_in_switcher|default(1) ? 'checked' : '' }}>
          <span class="text-xs text-gray-600 group-hover:text-gray-900">{{ trans('admin.templates.show_in_switcher') }}</span>
        </label>

        <a href="{{ base_path }}/admin/templates/{{ template.id }}/edit"
           class="text-xs text-gray-500 hover:text-gray-900">
          <i class="fas fa-cog mr-1"></i>{{ trans('admin.templates.edit_settings') }}
        </a>
      </div>
    </div>
    {% endfor %}
  </div>

  {% if custom_templates|default([])|length > 0 %}
  <div class="mt-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">{{ trans('admin.templates.custom_templates') }}</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
      {% for template in custom_templates %}
      <div class="card p-4 flex flex-col gap-3 hover:shadow-md transition-all duration-200 {{ template.show_in_switcher|default(1) ? '' : 'opacity-50 grayscale' }}" data-template-id="{{ template.id }}">
        <div class="flex items-start gap-3">
          <i class="fas fa-palette text-gray-900 text-lg mt-0.5"></i>
          <div class="flex-1 min-w-0">
            <a href="{{ base_path }}/admin/custom-templates/{{ template.id }}/edit" class="font-medium text-gray-900 hover:text-blue-600 truncate block">{{ template.name }}</a>
            <p class="text-xs text-gray-500 truncate">{{ template.description|default('—') }}</p>
          </div>
        </div>

        <div class="flex items-center justify-between pt-2 border-t border-gray-100">
          <label class="flex items-center gap-2 cursor-pointer group">
            <input type="checkbox"
                   class="switcher-toggle w-4 h-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500"
                   data-id="{{ template.id }}"
                   data-type="custom"
                   {{ template.show_in_switcher|default(1) ? 'checked' : '' }}>
            <span class="text-xs text-gray-600 group-hover:text-gray-900">{{ trans('admin.templates.show_in_switcher') }}</span>
          </label>

          <a href="{{ base_path }}/admin/custom-templates/{{ template.id }}/edit"
             class="text-xs text-gray-500 hover:text-gray-900">
            <i class="fas fa-cog mr-1"></i>{{ trans('admin.templates.edit_settings') }}
          </a>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}

  {% if templates|length == 0 and (custom_templates|default([])|length == 0) %}
  <div class="card p-12 text-center">
    <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
      <i class="fas fa-palette text-gray-400 text-xl"></i>
    </div>
    <h3 class="text-sm font-medium text-gray-900 mb-1">{{ trans('admin.templates.no_templates') }}</h3>
    <p class="text-sm text-gray-500">{{ trans('admin.templates.no_templates_hint') }}</p>
  </div>
  {% endif %}

<script nonce="{{ csp_nonce() }}">
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.switcher-toggle').forEach(function(checkbox) {
    checkbox.addEventListener('change', function() {
      const id = this.dataset.id;
      const type = this.dataset.type;
      const show = this.checked ? 1 : 0;
      const card = this.closest('.card');

      fetch('{{ base_path }}/admin/templates/toggle-switcher', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': '{{ csrf }}'
        },
        body: JSON.stringify({ id: id, type: type, show: show })
      })
      .then(r => r.json())
      .then(data => {
        if (data.success) {
          if (show) {
            card.classList.remove('opacity-50', 'grayscale');
          } else {
            card.classList.add('opacity-50', 'grayscale');
          }
        } else {
          this.checked = !this.checked;
          alert(data.message || 'Error');
        }
      })
      .catch(() => {
        this.checked = !this.checked;
      });
    });
  });
});
</script>
{% endblock %}
