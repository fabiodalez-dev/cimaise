{% extends 'admin/_layout.twig' %}
{% block title %}{{ trans('admin.pages.title') }} â€” {{ trans('admin.pages.privacy.title_short') }}{% endblock %}
{% block content %}
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">{{ trans('admin.pages.title') }}</h1>
      <p class="text-gray-600 mt-1">{{ trans('admin.pages.privacy.edit')|raw }}</p>
    </div>
    <a href="{{ base_path }}/{{ settings['privacy.slug']|default('privacy-policy') }}" class="btn-secondary" target="_blank"><i class="fas fa-external-link-alt mr-2"></i>{{ trans('admin.pages.view_page') }}</a>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Editor -->
    <div class="lg:col-span-2">
      <form method="post" action="{{ base_path }}/admin/pages/privacy" class="space-y-6">
        <input type="hidden" name="csrf" value="{{ csrf }}">

        <div class="card">
          <div class="p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
              <i class="fas fa-heading mr-3 text-gray-600"></i>
              {{ trans('admin.pages.basic_texts') }}
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm text-gray-700 mb-1">{{ trans('admin.pages.page_title') }}</label>
                <input type="text" name="privacy_title" class="form-input" placeholder="Privacy Policy" value="{{ settings['privacy.title']|default('Privacy Policy') }}">
              </div>
              <div>
                <label class="block text-sm text-gray-700 mb-1">{{ trans('admin.pages.permalink') }}</label>
                <div class="flex items-center gap-2">
                  <span class="text-sm text-gray-500 select-none">/</span>
                  <input type="text" name="privacy_slug" class="form-input" placeholder="privacy-policy" value="{{ settings['privacy.slug']|default('privacy-policy') }}">
                </div>
                <p class="text-xs text-gray-500 mt-1">{{ trans('admin.pages.permalink_help') }}</p>
              </div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
              <i class="fas fa-user-shield mr-3 text-gray-600"></i>
              {{ trans('admin.pages.privacy.content') }}
            </h3>
            <textarea name="privacy_content" rows="18" class="form-input richtext" placeholder="{{ trans('admin.pages.privacy.content_placeholder') }}">{{ settings['privacy.content'] }}</textarea>
            <p class="text-xs text-gray-500 mt-2">{{ trans('admin.pages.privacy.content_help') }}</p>
          </div>
        </div>

        <div class="card">
          <div class="p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
              <i class="fas fa-cog mr-3 text-gray-600"></i>
              {{ trans('admin.pages.privacy.settings') }}
            </h3>
            <div class="flex items-center gap-3">
              <input type="checkbox" name="show_in_footer" id="show_in_footer" class="form-checkbox" {{ settings['privacy.show_in_footer'] ? 'checked' : '' }}>
              <label for="show_in_footer" class="text-sm text-gray-700">{{ trans('admin.pages.privacy.show_in_footer') }}</label>
            </div>
            <p class="text-xs text-gray-500 mt-2">{{ trans('admin.pages.privacy.show_in_footer_help') }}</p>
          </div>
        </div>

        <div class="flex items-center justify-end gap-3">
          <a href="{{ base_path }}/admin/pages" class="btn-secondary">{{ trans('admin.pages.cancel') }}</a>
          <button type="submit" class="btn-primary"><i class="fas fa-save mr-2"></i>{{ trans('admin.pages.save') }}</button>
        </div>
      </form>
    </div>

    <!-- Info Panel -->
    <div class="lg:col-span-1">
      <div class="card">
        <div class="p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-2">{{ trans('admin.pages.privacy.info_title') }}</h3>
          <p class="text-sm text-gray-600">{{ trans('admin.pages.privacy.info_description') }}</p>
          <div class="mt-4 p-3 bg-gray-50 rounded-lg">
            <p class="text-xs text-gray-500">{{ trans('admin.pages.privacy.info_tip') }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script nonce="{{ csp_nonce() }}" src="{{ base_path }}/assets/vendor/tinymce/tinymce.min.js"></script>
  <script nonce="{{ csp_nonce() }}">
    document.addEventListener('DOMContentLoaded', function(){
      if (window.tinymce) {
        tinymce.init({
          selector: 'textarea.richtext',
          base_url: (window.basePath || '') + '/assets/vendor/tinymce',
          menubar: false,
          statusbar: false,
          branding: false,
          plugins: 'link lists autoresize',
          toolbar: 'undo redo | styles | bold italic underline strikethrough | bullist numlist | blockquote | link | removeformat',
          block_formats: 'Paragraph=p; Heading 3=h3; Heading 2=h2; Note=h4',
          default_link_target: '_blank',
          link_default_protocol: 'https',
          rel_list: [{title: 'noopener', value: 'noopener'},{title:'noreferrer', value:'noreferrer'}],
          content_css: false,
          content_style: 'body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif; color:#111; line-height:1.7} a{color:#000; text-decoration:underline} blockquote{border-left:3px solid #e5e7eb; margin:1rem 0; padding-left:.75rem; color:#444}',
          valid_elements: 'p,br,strong/b,em/i,u,s,ul,ol,li,blockquote,a[href|target|rel],h2,h3,h4,hr',
          height: 480
        });
      }
    });
  </script>
{% endblock %}
